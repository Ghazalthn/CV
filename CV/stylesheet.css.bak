* {
	margin : 0;
	padding: 0;
}

body { 
	font-family: Calibri;
	color: #000000;
	line-height: 200%;
	direction: rtl;
	background-color: #e05300;
}

header {
	background-color: #e05300;
	height: 150px;
}

h1 {
	display : inline;
	color : #000000; 
	line-height:140px;
	font-size: 40;
	margin-right : 20px;
	font-weight : bolder;
}

h2 {
	color : #000000;
	margin-right : 20px;
}

nav {
	width : 100%;
	height: 70px;
	background-color: #1a0000 ;
}

ul li {
	list-style: none;
	display:inline-block;
	float: right;
	line-height:70px;
}

ul li a {
	color : white;
	display: block;
	font-size: 20px;
	text-decoration: none;
	padding: 0 40px;
}

ol {
	list-style: upper;
	margin-right: 30px;
}

.abc {
	color: white;
}

span {
	margin-right: 20px;
}

p {
	margin-right: 20px;
}

form {
	margin-right : 20px;
}

.logo {
	margin-right : 20px;
	vertical-align: middle;
	line-height: 140px;
}
